# Dockerfile for AMP Kernel
FROM rust:1.75 AS builder

WORKDIR /app

# Copy manifest files
COPY kernel/Cargo.toml ./

# Create a dummy main to build dependencies
RUN mkdir -p src/cmd/ampctl && echo \"fn main() {}\" > src/cmd/ampctl/main.rs
RUN cargo build --release
RUN rm -f target/release/deps/amp*

# Copy source code
COPY kernel/src ./src
COPY kernel/Cargo.toml ./
COPY kernel/internal ./internal
COPY kernel/cmd ./cmd
COPY kernel/tests ./tests

# Build the application
RUN cargo build --release

# Runtime stage
FROM debian:bookworm-slim AS runtime

# Install runtime dependencies
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the executable from the builder stage
COPY --from=builder /app/target/release/amp /usr/local/bin/amp

# Create non-root user
RUN groupadd -r amp && useradd -r -g amp amp

USER amp

# Expose port for API
EXPOSE 7777

# Default command
CMD ["amp"]