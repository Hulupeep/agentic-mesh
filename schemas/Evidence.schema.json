{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence",
  "description": "Evidence object for proof-of-grounding",
  "type": "object",
  "properties": {
    "claims": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "supports": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Support"
      }
    },
    "contradicts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Contradiction"
      }
    },
    "verdicts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Verdict"
      }
    }
  },
  "definitions": {
    "Support": {
      "type": "object",
      "properties": {
        "claim_id": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "explanation": {
          "type": "string"
        }
      }
    },
    "Contradiction": {
      "type": "object",
      "properties": {
        "claim_id": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "explanation": {
          "type": "string"
        }
      }
    },
    "Verdict": {
      "type": "object",
      "properties": {
        "claim_id": {
          "type": "string"
        },
        "verdict": {
          "type": "string",
          "enum": ["supported", "contradicted", "neutral"]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "needs_citation": {
          "type": "boolean"
        }
      }
    }
  }
}