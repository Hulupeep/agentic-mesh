{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Memory",
  "description": "Memory store entry",
  "type": "object",
  "required": ["key", "value", "timestamp"],
  "properties": {
    "key": {
      "type": "string"
    },
    "value": {
      "type": "object",
      "additionalProperties": true
    },
    "provenance": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "ttl": {
      "type": "string",
      "pattern": "^P([0-9]+Y)?([0-9]+M)?([0-9]+D)?(T([0-9]+H)?([0-9]+M)?([0-9]+S)?)?$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  }
}