{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan",
  "description": "Plan Intermediate Representation for AMP execution",
  "type": "object",
  "required": ["signals", "nodes", "edges"],
  "properties": {
    "signals": {
      "type": "object",
      "properties": {
        "latency_budget_ms": {
          "type": "integer",
          "minimum": 0
        },
        "cost_cap_usd": {
          "type": "number",
          "minimum": 0
        },
        "risk": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Node"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Edge"
      }
    },
    "stop_conditions": {
      "type": "object",
      "properties": {
        "max_nodes": {
          "type": "integer",
          "minimum": 0
        },
        "min_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  },
  "definitions": {
    "Node": {
      "type": "object",
      "required": ["id", "op"],
      "properties": {
        "id": {
          "type": "string"
        },
        "op": {
          "type": "string",
          "enum": ["call", "map", "reduce", "branch", "assert", "spawn", "mem.read", "mem.write", "verify", "retry"]
        },
        "tool": {
          "type": "string"
        },
        "capability": {
          "type": "string"
        },
        "args": {
          "type": "object",
          "additionalProperties": true
        },
        "bind": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "out": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "op": {
                "enum": ["call", "map", "reduce", "mem.read", "mem.write", "verify", "retry"]
              }
            }
          },
          "then": {
            "anyOf": [
              { "required": ["tool"] },
              { "required": ["capability"] }
            ]
          }
        }
      ]
    },
    "Edge": {
      "type": "object",
      "required": ["from", "to"],
      "properties": {
        "from": {
          "type": "string"
        },
        "to": {
          "type": "string"
        }
      }
    }
  }
}
